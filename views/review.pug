extends base

mixin reviewRating(review)
     each star in [1, 2, 3, 4, 5]
        svg.reviews__star(class=`reviews__star--${review.rating >= star ? 'active' : 'inactive'}`)
            use(xlink:href='/img/icons.svg#icon-star')



block content 
    main.main 
        .card-container
            each review in reviews
                .reviews__card
                    .card__header
                        a(href=`/tour/${review.tour.slug}`).heading-primary-personal=review.tour.name
                    .reviews__avatar
                        img( src=`img/users/${review.user.photo}` alt='Alexander Jones').reviews__avatar-img
                        h6.reviews__user=review.user.name
                    p.reviews__text=review.review
                    .reviews__rating
                        +reviewRating(review)
                         
